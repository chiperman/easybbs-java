<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.easybbs.mapper.EmailCodeMapper">

    <resultMap id="BaseResultMap" type="com.easybbs.entity.EmailCode">
        <id property="email" column="email" jdbcType="VARCHAR"/>
        <id property="code" column="code" jdbcType="VARCHAR"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
        <result property="status" column="status" jdbcType="TINYINT"/>
    </resultMap>

    <sql id="Base_Column_List">
        email,code,create_time,
        status
    </sql>
    <update id="disableEmailCode">
        update email_code
        set status = 1
        where email = #{email}
          and status = 0
    </update>
</mapper>
